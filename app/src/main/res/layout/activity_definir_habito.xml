<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DefinirHabito">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Define tu hábito"
        android:textColor="#00D9C4"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etDefinirHabito"
        android:layout_width="370dp"
        android:layout_height="52dp"
        android:layout_marginTop="45dp"
        android:hint="Hábito"
        android:background="@drawable/estilo_borde"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/etDescripcionHabito"
        android:layout_width="370dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/estilo_borde"
        android:hint="Descripción"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Ej: Hacer ejercicio"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/etDefinirHabito"
        app:layout_constraintStart_toStartOf="@+id/etDefinirHabito"
        app:layout_constraintTop_toBottomOf="@+id/etDefinirHabito" />

    <Button
        android:id="@+id/btn_cancelarCuando"
        android:layout_width="160dp"
        android:layout_height="66dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#A9F1E5"
        android:drawableStart="@drawable/estilo_borde_circular"
        android:text="Anterior"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etDescripcionHabito" />

    <Button
        android:id="@+id/btn_confirmarCuando"
        android:layout_width="160dp"
        android:layout_height="66dp"
        android:layout_marginBottom="32dp"
        android:drawableStart="@drawable/estilo_borde_circular"
        android:text="Siguiente"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etDescripcionHabito"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_cancelarCuando" />

</androidx.constraintlayout.widget.ConstraintLayout>